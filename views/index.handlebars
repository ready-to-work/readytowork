<body>
	<div class="container">
		<div class="row">
			<div class="col-sm-3 col-centered" >
				<h1 class="font-bold">ready to work.</h1>
				<div class="login">
					<h6>Hint: John Smith: admin </h6>
					<form class="login">
						<input type="text" placeholder="Username" name="userid"><br>
						<input type="password" placeholder="password" name="pass"><br>
						<input type="button" onclick="userLoginAuth(this.form)" value="Login"/>
					</form>

					<div id="error"></div>
				</div>
			</div>
		</div>

		<div class="row" style="padding-top: 20px;">
			<div class="col-sm-3 col-centered">
				<a href="/home">
					<h4>Quick Login for Devs</h4>
				</a>				
			</div>
		</div>
	</div>
	
